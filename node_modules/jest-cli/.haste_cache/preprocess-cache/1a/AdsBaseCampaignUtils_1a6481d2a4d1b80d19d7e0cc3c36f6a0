'use strict';





















var MS_PER_DAY=1000*60*60*24;

var AdsBaseCampaignUtils={




getCampaignDayCountFrom:function(
startDate,
endDate)
{
var delta=endDate.valueOf()-startDate.valueOf();
return delta/MS_PER_DAY;},


isSameDayUTC:function(date1,date2){
return (
date1.getUTCDate()===date2.getUTCDate()&&
date1.getUTCMonth()===date2.getUTCMonth()&&
date1.getUTCFullYear()===date2.getUTCFullYear());},



isStartDateEditable:function(
isNewCampaign,
startDate,
now)
{
now=now||new Date();
return isNewCampaign||startDate>now;},


getCampaignDayLeftCount:function(
startDate,
endDate)
{
var currDate=new Date();
var currDateStart=new Date(
currDate.getFullYear(),
currDate.getMonth(),
currDate.getDate());

endDate=endDate||currDate;
if(endDate<currDate){

return 0;}else 
if(currDateStart>=startDate){



return this.getCampaignDayCountFrom(
currDateStart,
endDate);}else 

{


return this.getCampaignDayCountFrom(
startDate,
endDate);}}};






module.exports=AdsBaseCampaignUtils;