'use strict';

require('configureForRelayOSS');






describe('callsToGraphQL', function () {
  it('converts array calls with null values', function () {
    var relayCalls = [{ 
      name: 'size', 
      value: null }];

    var graphqlCalls = [require('RelayTestUtils').createCall('size', null)];
    expect(require('callsFromGraphQL')(graphqlCalls)).toEqual(relayCalls);
    expect(require('callsToGraphQL')(relayCalls)).toEqual(graphqlCalls);});


  it('converts array calls without values', function () {
    var relayCalls = [{ 
      name: 'size', 
      value: [] }];

    var graphqlCalls = [require('RelayTestUtils').createCall('size', [])];
    expect(require('callsFromGraphQL')(graphqlCalls)).toEqual(relayCalls);
    expect(require('callsToGraphQL')(relayCalls)).toEqual(graphqlCalls);});


  it('converts calls with array values', function () {
    var relayCalls = [{ 
      name: 'size', 
      value: [32, 64] }];

    var graphqlCalls = [require('RelayTestUtils').createCall('size', [32, 64])];
    expect(require('callsFromGraphQL')(graphqlCalls)).toEqual(relayCalls);
    expect(require('callsToGraphQL')(relayCalls)).toEqual(graphqlCalls);});


  it('converts singular calls with null values', function () {
    var relayCalls = [{ 
      name: 'size', 
      value: 32 }];

    var graphqlCalls = [require('RelayTestUtils').createCall('size', 32)];
    expect(require('callsFromGraphQL')(graphqlCalls)).toEqual(relayCalls);
    expect(require('callsToGraphQL')(relayCalls)).toEqual(graphqlCalls);});});