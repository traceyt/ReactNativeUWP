'use strict';



describe('RelayRecordStatusMap', function () {
  it('sets and checks optimistic status correctly', function () {
    var result = 0;
    expect(require('RelayRecordStatusMap').isOptimisticStatus(result)).toBe(false);
    result = require('RelayRecordStatusMap').setOptimisticStatus(
    result, 
    false);

    expect(require('RelayRecordStatusMap').isOptimisticStatus(result)).toBe(false);
    result = require('RelayRecordStatusMap').setOptimisticStatus(
    result, 
    true);

    expect(require('RelayRecordStatusMap').isOptimisticStatus(result)).toBe(true);
    result = require('RelayRecordStatusMap').setOptimisticStatus(
    result, 
    true);

    expect(require('RelayRecordStatusMap').isOptimisticStatus(result)).toBe(true);
    result = require('RelayRecordStatusMap').setOptimisticStatus(
    result, 
    false);

    expect(require('RelayRecordStatusMap').isOptimisticStatus(result)).toBe(false);});


  it('sets and checks error status correctly', function () {
    var result = 0;
    expect(require('RelayRecordStatusMap').isErrorStatus(result)).toBe(false);
    result = require('RelayRecordStatusMap').setErrorStatus(
    result, 
    false);

    expect(require('RelayRecordStatusMap').isErrorStatus(result)).toBe(false);
    result = require('RelayRecordStatusMap').setErrorStatus(
    result, 
    true);

    expect(require('RelayRecordStatusMap').isErrorStatus(result)).toBe(true);
    result = require('RelayRecordStatusMap').setErrorStatus(
    result, 
    true);

    expect(require('RelayRecordStatusMap').isErrorStatus(result)).toBe(true);
    result = require('RelayRecordStatusMap').setErrorStatus(
    result, 
    false);

    expect(require('RelayRecordStatusMap').isErrorStatus(result)).toBe(false);});});