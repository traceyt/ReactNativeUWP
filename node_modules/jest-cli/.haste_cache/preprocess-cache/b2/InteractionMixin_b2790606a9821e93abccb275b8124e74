'use strict';














var InteractionMixin={
componentWillUnmount:function(){
while(this._interactionMixinHandles.length){
require('InteractionManager').clearInteractionHandle(
this._interactionMixinHandles.pop());}},




_interactionMixinHandles:[],

createInteractionHandle:function(){
var handle=require('InteractionManager').createInteractionHandle();
this._interactionMixinHandles.push(handle);
return handle;},


clearInteractionHandle:function(clearHandle){
require('InteractionManager').clearInteractionHandle(clearHandle);
this._interactionMixinHandles=this._interactionMixinHandles.filter(
function(handle){return handle!==clearHandle;});},








runAfterInteractions:function(callback){
require('InteractionManager').runAfterInteractions(callback);}};



module.exports=InteractionMixin;